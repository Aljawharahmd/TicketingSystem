@model ClientUpdateViewParameters

@{
    ViewData["Title"] = "Register";
    Layout = "Layout";
}
<body>
    <div id="mainDiv">
        <section class="container-fluid mb-5">
            <div class="row">
                <div id="land" class="col-6 pl-5 loginGroup">
                    <img class="img-fluid align-content-center" src="~/img/landing2.png" />
                </div>

                <div class="col-1">
                </div>

                <div class="col-5 lform">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, htmlAttributes: new { oninput = "confirmPassword.setCustomValidity(confirmPassword.value != password.value ? 'Passwords do not match.' : '')" }))
                    {
                        @Html.AntiForgeryToken()
                        <form class="llform txtDark pl-5">

                            <div id="login" class="form-group justify-content-center">
                                <div><h1>Client Register</h1></div>
                            </div>

                            <div id="" class="form-group justify-content-center">
                                <label>Full Name</label>
                                <div class="form-inline">
                                    @Html.TextBoxFor(model => model.FirstName, htmlAttributes: new { id = "firstName", placeholder = "First Name", required = "true", @class = "form-control col-3 mr-3" })

                                    @Html.TextBoxFor(model => model.LastName, htmlAttributes: new { id = "lastName", placeholder = "Last Name", required = "true", @class = "form-control col-3" })

                                </div>
                            </div>
                            <div class="form-group justify-content-center">
                                <label>Mobile Number</label>
                                <div class="form-inline">
                                    @Html.DropDownListFor(model => model.AreaCode,
                                        new SelectList(new List<string> { "+966", "+962", "+971" }), new { @class = "custom-select form-control col-2 mr-3" })
                                    @Html.TextBoxFor(model => model.MobileNumber, htmlAttributes: new { id = "mobileNumber", placeholder = "", maxlength = "9", pattern = "[0-9]{9}", required = "true", @class = "form-control col-4" })

                                </div>
                                <small id="Mobilehelp" class="form-text text-muted">You Will Recieve a Code via SMS</small>
                            </div>
                            <div class="form-group">
                                <label>Email address</label>
                                @Html.TextBoxFor(model => model.Email, htmlAttributes: new { id = "email", type = "email", placeholder = "Enter your Email", required = "true", @class = "form-control col-md-7" })
                                <small class="form-text text-muted">We'll never share your email with anyone else.</small>
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <div class="form-inline">
                                    @Html.PasswordFor(model => model.Password, htmlAttributes: new { id = "password", name = "password", type = "password", placeholder = "Password", required = "true", @class = "form-control col-md-7" })
                                    <div id="meter_wrapper">
                                        <div id="meter"></div> 
                                        <span id="pass_type"></span>
                                    </div>
                                   
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Confirm Password</label>
                                <input type=password name=confirmPassword class="form-control col-md-7" placeholder="Confirm Password" required>
                            </div>

                            <button type="submit" class="btn btn-dark mr-1" asp-controller="Account" asp-action="Register">Register</button>
                            <button type="reset" class="btn btn-dark">Clear</button>
                        </form>
                    }
                </div>
            </div>
        </section>
    </div>
    <script src="~/js/passwordStrength.js"></script>
    @section Scripts
{
        <script>
            $(document).ready(function () {
                $("#password").keyup(function () {
                    checkPasswordStrength();
                });
            });
        </script>
    }
</body>
