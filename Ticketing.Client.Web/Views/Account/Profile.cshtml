@model ClientUpdateViewParameters
@{
    ViewData["Title"] = "Profile";
    Layout = "Layout";
}
<body>
    <div class="container profileBG">
        <div class="row mt-5">
            <div class="col-1 mt-3 pl-4 linkHover">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home txtDark" style="font-size: 40px;"></i>
                </a>
            </div>
            <div class="col-5">
                <h2 class="mt-3"><strong>Update Profile</strong></h2>
                <br />
                @using (Html.BeginForm("Profile", "Account", FormMethod.Post, htmlAttributes: new { oninput = "confirmPassword.setCustomValidity(confirmPassword.value != password.value ? 'Passwords do not match.' : '')" }))
                {
                    @Html.AntiForgeryToken()
                    <form id="profileForm" class="txtDark">
                        <div id="" class="form-group justify-content-center">
                            <label>Full Name</label>
                            <div class="form-inline">
                                @Html.TextBoxFor(model => model.FirstName, htmlAttributes: new { placeholder = "First Name", required = "true", @class = "form-control col-4 mr-3" })
                                @Html.TextBoxFor(model => model.LastName, htmlAttributes: new { placeholder = "Last Name", required = "true", @class = "form-control col-4" })


                            </div>
                        </div>
                        <div class="form-group justify-content-center">
                            <label>Mobile Number</label>
                            <div class="form-inline">
                                @Html.DropDownListFor(model => model.AreaCode,
                                    new SelectList(new List<string> { "+966", "+962", "+971" }), new { @class = "custom-select form-control col-3 mr-3" })
                                @Html.TextBoxFor(model => model.MobileNumber, htmlAttributes: new { id = "mobileNumber", placeholder = "", maxlength = "9", pattern = "[0-9]{9}", required = "true", @class = "form-control col-5" })

                                <small id="Mobilehelp" class="form-text text-muted">The Mobile Number you Registered with</small>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Email address</label>
                            @Html.TextBoxFor(model => model.Email, htmlAttributes: new { type = "email", required = "true", @class = "form-control col-7" })
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <div class="form-inline">
                                @Html.PasswordFor(model => model.Password, htmlAttributes: new { id = "password", name = "password", type = "password", placeholder = "Password", required = "true", @class = "form-control col-7" })
                                <div id="meter_wrapper">
                                    <div id="meter"></div>
                                    <span id="pass_type"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input type=password name=confirmPassword class="form-control col-7" placeholder="Confirm Password" required>
                        </div>
                        @Html.HiddenFor(model => model.Id)

                        <button type="submit" class="btn btn-dark mr-1" onclick="LoginUser()" asp-controller="Account" asp-action="Profile">Update</button>
                        <button type="reset" class="btn btn-dark">Clear</button>
                    </form>
                }
            </div>
            <div class="col-5 mt-1" style="border-left: solid 1px #e0e0e0;">
                <div class="card" style="border: none !important; background-color: rgba(255, 255, 255, 0)">
                    <div class="card-body cardNoHover">
                        <h2><strong>Profile Information</strong></h2>
                        <br />
                        <profile>
                            <h5><strong>Name </strong></h5>
                            <p>@Model.FirstName @Model.LastName</p>
                            <h5><strong>Mobile Number </strong></h5>
                            <p>@Model.AreaCode @Model.MobileNumber</p>
                            <h5><strong>Email </strong></h5>
                            <p>@Model.Email</p>
                        </profile>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/passwordStrength.js"></script>
    @section Scripts
{
        <script>
            $(document).ready(function () {
                $("#password").keyup(function () {
                    checkPasswordStrength();
                });
            });
        </script>
    }
</body>

