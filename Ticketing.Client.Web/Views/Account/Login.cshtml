@model LoginParameters
@{
    ViewData["Title"] = "Login";
    Layout = "Layout";
}
<body>
    <div id="mainDiv">
        <section class="container-fluid">
            <div class="row">
                <div id="land" class="col-6">
                    <img class="img-fluid align-content-center" src="~/img/landing2.png" />
                </div>
                <div class="col-1">
                </div>
                <div class="col-5 lform" style="padding-top:100px">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <form class="llform txtDark pl-5" data-toggle="validator" role="form">
                            <div id="login" class="form-group justify-content-center">
                                <div><h1>Client Log In</h1></div>
                                <br />
                                <label>Mobile Number</label>
                                <div id="" class="form-inline">
                                    @Html.DropDownListFor(model => model.AreaCode,
                                 new SelectList(new List<string> { "+966", "+962", "+971" }), new { @class = "custom-select form-control col-2 mr-2" })
                                    @Html.TextBoxFor(model => model.MobileNumber, htmlAttributes: new { id = "mobileNumber", maxlength = "9",pattern= "[0-9]{9}", required="true", @class = "form-control col-4"})
                                </div>
                                <small id="Mobilehelp" class="form-text text-muted">The Mobile Number you Registered with</small>
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                @Html.PasswordFor(model => model.Password, htmlAttributes: new { id = "password", placeholder = "Enter your Password", @class = "form-control col-6", required = "true",minlength="3" })
                            </div>
                            <div class="form-group linkColor">
                                <a asp-controller="Account" asp-action="Register">Not Registered?</a>
                            </div>
                            <button type="submit" class="btn btn-dark mr-1" asp-controller="Account" asp-action="Login">Log In</button>
                            <button type="reset" class="btn btn-dark">Clear &nbsp;</button>
                        </form>
                    }
                </div>
            </div>
        </section>
    </div>
</body>
