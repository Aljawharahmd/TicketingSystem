<!DOCTYPE html>
@{
    string message = "";
    if (TempData["message"] != null)
    {
        message = TempData["message"].ToString();
    }

    string errorMessage = "";
    if (TempData["errorMessage"] != null)
    {
        errorMessage = TempData["errorMessage"].ToString();
    }
}
<html lang="en">
<head>
    <title>@ViewData["Title"] - TicketingSystem.Web</title>
    <!--Body Font-->
    <link href="https://fonts.googleapis.com/css2?family=Karla&display=swap" rel="stylesheet">
    <!--Logo Font-->
    <link href="https://fonts.googleapis.com/css2?family=Righteous&display=swap" rel="stylesheet">
    <!--Bootstrap-->
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />

    <!--Font Awesome--->
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/371fe26079.js" crossorigin="anonymous"></script>

    <!--Sweet Alert-->
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <!--CSS-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/clientStyles.css" />

</head>
<body>
    <header>
        <nav class="sb-topnav navbar navbar-expand navbar-light" style="background-color: white !important">
            <a class="logo navbar-brand dropdown-item" style="font-size:30pt; color: #263949">
                Tick<span style="color: #f8ac59">IT</span>
            </a>

            <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
            </form>

            <!-- Navbar-->
            @if (ViewBag.userId != null)
            {
                <ul class="navbar-nav ml-auto ml-md-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">

                            <a class="navbar-brand dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile">Profile</a>
                            <a class="navbar-brand dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                        </div>
                    </li>
                </ul>
            }
        </nav>
    </header>

    @RenderBody()

    <!-- Site footer -->
    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <h6>About</h6>
                    <p class="text-justify">
                        TickIT is a passionately developed client support ticketing system that provides support to the users of T2 software products.
                        Because our clients are valuable to us, we aimed at providing the best user experience that saves time and increases productivity.
                        <br />About the team: Code Gurus is a tireless, passionate team consisting of three developers and led by a great mentor.
                    </p>
                </div>

                <div class="col-xs-6 col-md-3">
                    <h6>Products</h6>
                    <ul class="footer-links">
                        <li><a href="https://www.t2.sa/en/product/availo">Availo</a></li>
                        <li><a href="https://www.t2.sa/en/product/dots">Dots</a></li>
                        <li><a href="https://www.t2.sa/en/product/ole5-%D9%86%D8%B8%D8%A7%D9%85-%D8%A7%D9%84%D9%85%D8%B1%D8%A7%D8%B3%D9%84%D8%A7%D8%AA">Ole5</a></li>
                        <li><a href="https://www.t2.sa/en/product/reedoo">Reedoo</a></li>
                        <li><a href="https://www.t2.sa/en/product/rich">Rich</a></li>
                    </ul>
                </div>

                <div class="col-xs-6 col-md-3">
                    <h6>Stay in touch</h6>
                    <ul class="footer-links">
                        <li>Phone: 966-532252295</li>
                        <li>Fax: 966-11-1111111</li>
                        <li>E-mail: TickIT@support.com</li>
                    </ul>
                </div>
            </div>
            <hr>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-sm-6 col-xs-12">
                    <p class="copyright-text">
                        Copyright &copy; 2020 All Rights Reserved by Code Gurus Team
                    </p>
                </div>

                <div class="col-md-4 col-sm-6 col-xs-12">
                    <ul class="social-icons">
                        <li><a class="facebook" href="#"><i class="fa fa-facebook"></i></a></li>
                        <li><a class="twitter" href="#"><i class="fa fa-twitter"></i></a></li>
                        <li><a class="linkedin" href="#"><i class="fa fa-linkedin"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script>

        $(document).ready(function () {
            showMessage("@message", "@errorMessage");
        });

        function showMessage(message, errorMessage) {
            if (typeof (message) == "undefined" || message == null || message === "")
                return;
            else
            successAlert(message);

            if (typeof (errorMessage) == "undefined" || errorMessage == null || errorMessage === "")
                return;
            else
                errorAlert(errorMessage);
        }
        function successAlert(message) {
            swal("Done", message, "success");
        }
        function errorAlert(errorMessage) {
            swal("Error", errorMessage, "error");

        }
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
