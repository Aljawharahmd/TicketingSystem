@model StaffMemberUpdateViewParameters
@{
    ViewData["Title"] = "Register";
    Layout = "Layout";
}
    <body>
        <div id="mainDiv" class="staffBG mt-4">
            <section class="container-fluid">
                <div class="row">
                    <div class="col-1">
                    </div>
                    <div class="col-4 lform">
                        <div class="jumbotron pt-3">
                            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <form id="registerForm" class="llform txtDark pb-5">
                                    <div id="login" class="form-group justify-content-center">
                                        <div class="mt-4"><h1>Staff Register</h1></div>
                                    </div>

                                    <div id="" class="form-group justify-content-center">
                                        <label>Full Name</label>
                                        <div id="" class="form-inline">
                                            @Html.TextBoxFor(model => model.FirstName, htmlAttributes: new { id = "firstName", placeholder = "First Name", required = "true", @class = "form-control col-4 mr-3" })

                                            @Html.TextBoxFor(model => model.LastName, htmlAttributes: new { id = "lastName", placeholder = "Last Name", required = "true", @class = "form-control col-4" })

                                        </div>
                                    </div>
                                    <div class="form-group justify-content-center">
                                        <label>Mobile Number</label>
                                        <div id="" class="form-inline">
                                            @Html.DropDownListFor(model => model.AreaCode,
                                            new SelectList(new List<string> { "+966", "+962", "+971" }), new { @class = "custom-select form-control col-3 mr-3" })

                                            @Html.TextBoxFor(model => model.MobileNumber, htmlAttributes: new { id = "mobileNumber", placeholder = "", maxlength = "9", pattern = "[0-9]{9}", required = "true", @class = "form-control col-5" })

                                            <small id="Mobilehelp" class="form-text text-muted">The Mobile Number you Registered with</small>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Email Address</label>
                                        @Html.TextBoxFor(model => model.Email, htmlAttributes: new { type = "email", required = "true", placeholder = "Enter your Email", @class = "form-control col-9" })
                                        <small class="form-text text-muted">We'll never share your email with anyone else.</small>
                                    </div>
                                    <div class="form-group">
                                        <label>Address</label>
                                        @Html.TextBoxFor(model => model.Address, htmlAttributes: new { id = "address", placeholder = "Enter your Address", @class = "form-control col-9" })
                                    </div>
                                    <div class="form-group justify-content-center">
                                        <label>Date of Birth</label><br />
                                       
                                        @Html.EditorFor(model => model.BirthDate, new { @type = "date", required = "true", @class = "col-9" })

                                     </div>
                                    <button type="submit" class="btn btn-dark" asp-controller="Account" asp-action="Register">Register</button>
                                    <button type="reset" class="btn btn-dark">Clear</button>
                                </form>
                            }
                            </div>
                    </div>
                </div>
            </section>
        </div>
    </body>
